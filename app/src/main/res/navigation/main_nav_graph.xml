<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_nav_graph"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.plcoding.streamchatapp.di.login.LoginFragment"
        android:label="LoginFragment" >
        <action
            android:id="@+id/action_loginFragment_to_channelFragment"
            app:destination="@id/channelFragment" />
    </fragment>
    <fragment
        android:id="@+id/channelFragment"
        android:name="com.plcoding.streamchatapp.ui.channel.ChannelFragment"
        android:label="ChannelFragment" >
        <action
            android:id="@+id/action_channelFragment_to_chatFragment"
            app:destination="@id/chatFragment" />
        <action
            android:id="@+id/action_channelFragment_to_createChannelDialog"
            app:destination="@id/createChannelDialog" />
    </fragment>
    <fragment
        android:id="@+id/chatFragment"
        android:name="com.plcoding.streamchatapp.ui.chat.ChatFragment"
        android:label="ChatFragment" >
        <argument
            android:name="channelId"
            app:argType="string" />
    </fragment>
    <dialog
        android:id="@+id/createChannelDialog"
        android:name="com.plcoding.streamchatapp.ui.channel.CreateChannelDialog"
        android:label="CreateChannelDialog" />
</navigation>